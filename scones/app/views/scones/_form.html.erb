<% @scone.errors.full_messages.each do |message| %>
<p><%= message %></p>
<% end %>

<%= form_for [@house, @scone] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :flavor %>
  <%= f.text_field :flavor %>

  <%= f.label :img_url %>
  <%= f.text_field :img_url %>

  <%= f.submit %>
<% end %>
